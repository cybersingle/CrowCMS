<div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
  <header>
    <span class="widget-icon"> <i class="fa fa-file"></i> </span>
    <h2><p><%= t("article.table_title") %></p></h2>
  </header>
  <div>
    <div class="jarviswidget-editbox"></div>  
    <div class="widget-body no-padding">
      <table id="datatable_fixed_column" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th><%= t("article.id") %></th>
            <th><%= t("article.article_category") %></th>
            <th><%= t("article.title") %></th>
            <th><%= t("article.author") %></th>
            <th><%= t("article.hits") %></th>
            <th><%= t("article.created_at") %></th>
            <th><%= t("operate.title") %></th>
          </tr>
          <tr class="second">
            <td class="smart-form">
              <label class="input">
                <input type="text" name="search_engine" value="Filter engines" class="search_init">
              </label>
            </td>
            <td class="smart-form">
              <label class="input">
                <input type="text" name="search_browser" value="Filter browsers" class="search_init">
              </label>  
            </td>
            <td class="smart-form">
              <label class="input">
                <input type="text" name="search_platform" value="Filter platforms" class="search_init">
              </label>  
            </td>
            <td class="smart-form">
              <label class="input">
                <input type="text" name="search_version" value="Filter versions" class="search_init">
              </label>  
            </td>
            <td class="smart-form">
              <label class="input">
                <input type="text" name="search_grade" value="Filter grades" class="search_init">
              </label>  
            </td>
            <td class="smart-form">
              <label class="input">
                <input type="text" name="search_grade" value="Filter grades" class="search_init">
              </label>  
            </td>
            <td>
                <%= link_to t("operate.new"), new_admin_article_path, data: { no_turbolink: true }, class: "btn bg-color-green txt-color-white" %>
            </td>
          </tr>
        </thead>

        <tbody>
          <% @admin_articles.each do |admin_article| %>
          <tr>
            <td><%= admin_article.id %></td>
            <td><%= admin_article.article_category.title %></td>
            <td><%= admin_article.title %></td>
            <td><%= admin_article.author %></td>
            <td><%= admin_article.hits %></td>
            <td><%= admin_article.created_at %></td>
            <td>
             <%= link_to t("operate.show"), admin_article, class: "btn bg-color-blue txt-color-white" %>
             <%= link_to t("operate.edit"), edit_admin_article_path(admin_article), data: { no_turbolink: true }, class: "btn bg-color-orange txt-color-white" %>
             <%= link_to t("operate.delete"), admin_article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn bg-color-red txt-color-white" %>
             <% if admin_article.article_category.is_carousel === true %>
             <%= link_to t("article.is_carousel"), admin_picture_by_article_path(admin_article.id), class: "btn bg-color-blueDark txt-color-white pull-right" %>
             <% end %>
           </td>
          </tr>
          <% end %>
        </tbody>
      </table>      
    </div>
  </div>
</div>







