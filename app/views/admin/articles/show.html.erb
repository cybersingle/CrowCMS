<%if notice %>
<div class="alert alert-success fade in">
  <button class="close" data-dismiss="alert">×</button>
  <i class="fa-fw fa fa-check"></i>
  <strong><%= notice %></strong>
</div>
<% end %>
<div class="jarviswidget jarviswidget-color-darken" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false">
  <header>
    <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
    <h2>信息预览</h2>        
  </header>
  <div>
    <div class="jarviswidget-editbox"></div>
    <div class="widget-body no-padding">
      <div class="smart-form">
        <fieldset>
          <div class="row">
            <section class="col col-md-12">
              <h2 class="text-center">
                <%= @admin_article.title %>
              </h2>
            </section>
          </div>
          <div class="row">
            <section class="col col-md-12">
              <h5 class="text-right">
              <%= @admin_article.author %>,<%= @admin_article.created_at %>,<%= @admin_article.hits %>
              </h5>
            </section>
          </div>

         <header>
            <%= @admin_article.abstract %>
         </header>

          <div class="row">
            <section class="col col-md-12">
              <p>
                <%= raw(@admin_article.content) %>
              </p>
            </section>
          </div>
        </fieldset>
        <footer>
          <%= link_to t("operate.back"), admin_articles_path, class: "pull-right btn btn-primary" %>
          <%= link_to t("operate.edit"), edit_admin_article_path(@admin_article), class: "pull-right btn btn-primary", data: { no_turbolink: true }%>
        </footer>
      </div>
    </div>
    <!-- end widget content -->
  </div>
  <!-- end widget div -->
</div>

<p>
  <strong>Abstract:</strong>
  <%= @admin_article.abstract %>
</p>

<p>
  <strong>Thumb url:</strong>
  <%= image_tag @admin_article.thumb.url(:small) %>
</p>

<p>
  <strong>File url:</strong>
  <a href="<%= @admin_article.file.url %>"><%= @admin_article.file_file_name %></a>
</p>




